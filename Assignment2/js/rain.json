{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 550,
    "height": 300,
    "data": {
        "url": "data/weatherAUS.csv",
        "format": {
            "type": "csv"
        }
    },
    "params": [
        {
            "name": "sliderYear",
            "value": null,
            "bind": {
                "input": "range",
                "min": 2008,
                "max": 2016,
                "step": 1,
                "name": "Year: "
            }
        },
        {
            "name": "resetFilter",
            "value": "Select",
            "bind": {
                "input": "button",
                "name": "Click here to reset filter: " 
            }
        }
    ],
    "transform": [
        {
            "calculate": "year(datum.Date)",
            "as": "Year"
        },
        {
            "calculate": "if(isNaN(datum.Rainfall) || datum.Rainfall === 'NA', 0, datum.Rainfall)",
            "as": "TotalRainfall"
        },
        {
            "filter": "sliderYear == null || year(datum.Date) == sliderYear"
        },
        {
            "aggregate": [
                {
                    "op": "sum",
                    "field": "TotalRainfall",
                    "as": "TotalRainfall"
                }
            ],
            "groupby": [
                "Location"
            ]
        }
    ],
    "layer": [
        {
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "Location",
                    "type": "nominal",
                    "title": "Location"
                },
                "y": {
                    "field": "TotalRainfall",
                    "type": "quantitative",
                    "title": "Total Rainfall (mm)"
                },
                "color": {
                    "field": "TotalRainfall",
                    "type": "quantitative",
                    "scale": {
                        "type": "linear",
                        "scheme": "blues"
                    }
                },
                "tooltip": [
                    {
                        "field": "Location",
                        "type": "nominal"
                    },
                    {
                        "field": "TotalRainfall",
                        "type": "quantitative",
                        "format": ".1f",
                        "title": "Total rainfall (mm)"
                    }
                ]
            }
        },
        {
            "mark": "rule",
            "encoding": {
                "y": {
                    "aggregate": "mean",
                    "field": "TotalRainfall",
                    "type": "quantitative"
                },
                "color": {
                    "value": "red"
                },
                "size": {
                    "value": 2
                }
            }
        }
    ],
    "config": {
        "axisX": {
            "labelAngle": 45
        }
    },
    "title": "Total Rainfall by Location and Year"
}